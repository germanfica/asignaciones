{% extends 'layout.html.twig' %}

{% block body %}
{{ parent() }}
  <div class="container well">
    <div class="col-md-9">
      <h2>{{ task.title }}</h2>
      {# Usuario #}
        <dt>{{'User'|trans}}</dt>
        <dd>
          {{ task.user.fullName }}
          &nbsp;
        </dd>
      {# Titulo #}
        <dt>{{'Title'|trans}}</dt>
        <dd>
          {{ task.title }}
          &nbsp;
        </dd>
      {# Descripci√≥n #}
        <dt>{{'Description'|trans}}</dt>
        <dd>
          {{ task.description }}
          &nbsp;
        </dd>
      {# Creado #}
        <dt>{{'Created'|trans}}</dt>
        <dd>
            {{ task.createdAt|date('d-m-Y H:i') }}
            &nbsp;
        </dd>
      {# Actualizado #}
        <dt>{{'Updated'|trans}}</dt>
        <dd>
            {{ task.updatedAt|date('d-m-Y H:i') }}
            &nbsp;
        </dd>
      {# Estado #}
        <dt>{{'Status'|trans}}</dt>
        <dd>
            {% if task.status == 0 %}
              <span class="text-danger">{{'Waiting'|trans}}</span>
            {% elseif task.status == 1 %}
              <span class="text-success">{{'Finish'|trans}}</span>
            {% endif %}
            &nbsp;
        </dd>
    </div>
    <div class="col-md-3">
        <h3>{{ 'Actions'|trans }}:</h3>
        <p>
            <a href="{{ path('emm_task_edit', { id: task.id }) }}" class="btn btn-primary btn-lg btn-block">
            <span class="glyphicon glyphicon-edit"></span>
            {{ 'Edit task'|trans }}
            </a>
        </p>
        <p>
            {{ include('EMMUserBundle:Task:forms/form.html.twig', { form: delete_form, message: 'Are you sure?'|trans}) }}
        </p>
    </div>
  </div>
{% endblock %}
